# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# API Keys
GEMINI_API_KEY="your-gemini-api-key"
ABN_API_KEY="your-abn-lookup-api-key"

# Xero OAuth Configuration
XERO_CLIENT_ID="your-xero-client-id"
XERO_CLIENT_SECRET="your-xero-client-secret"
XERO_REDIRECT_URI="http://localhost:3110/api/xero/callback"
XERO_SCOPES="openid profile email accounting.settings accounting.transactions offline_access"

# Email Configuration (for verification and password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="TRAKYTT <noreply@trakytt.com>"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:3646"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# For testing with Ethereal (fake SMTP - get credentials from ethereal.email)
# SMTP_HOST="smtp.ethereal.email"
# SMTP_USER="..."
# SMTP_PASS="..."

# NextAuth (if using)
NEXTAUTH_SECRET="your-nextauth-secret"